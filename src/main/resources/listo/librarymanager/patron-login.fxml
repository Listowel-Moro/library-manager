<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="listo.librarymanager.controllers.AuthController">
    <Label style="-fx-font-size: 24;" text="Login as Patron" />

    <TextField fx:id="usernameField" maxWidth="400.0" promptText="Username" />
    <PasswordField fx:id="passwordField" maxWidth="400.0" promptText="Password" />

    <Button onAction="#onPatronLoginButtonClick" text="Log In" minWidth="100" />
    <Label fx:id="messageLabel" style="-fx-text-fill: red;" />

        <Label text="Don't have an account?" />
        <Button text="Sign Up as Patron" minWidth="100" onAction="#onNavigateToPatronRegisterClick" />
</VBox>
