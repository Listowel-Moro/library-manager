<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="listo.librarymanager.controllers.AuthController">
    <Label style="-fx-font-size: 24;" text="Register as Patron" />

    <TextField fx:id="usernameField" maxWidth="400.0" promptText="Username" />
    <TextField fx:id="phoneField" maxWidth="400.0" promptText="Phone" />
    <PasswordField fx:id="passwordField" maxWidth="400.0" promptText="Password" />
    <PasswordField fx:id="confirmPasswordField" maxWidth="400.0" promptText="Confirm Password" />

    <Button onAction="#onPatronRegisterButtonClick" text="Register" minWidth="100" />
    <Label fx:id="messageLabel" style="-fx-text-fill: red;" />

    <Label text="Already have an account?" />
    <Button text="Login as Patron" onAction="#onNavigateToPatronLoginClick" minWidth="100" />
</VBox>
